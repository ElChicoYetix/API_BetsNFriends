<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BETS 'N' FRIENDS</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap');

    body {
      font-size: 18px;
      font-family: 'Roboto', sans-serif;
      color: #34495e;
      background-color: #ecf0f1;
    }

    .header {
      background-color: #34495e;
      color: #ecf0f1;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px;
      box-shadow: 0px 3px 6px 0px rgba(0,0,0,0.16);
    }

    .header h1 {
      margin: 0;
      font-size: 2em;
    }

    .login {
      text-decoration: none;
      color: #ecf0f1;
      margin-right: 10px;
      padding: 10px 20px;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    .login:hover {
      background-color: #2ecc71;
    }

    .upload {
      text-decoration: none;
      color: #ecf0f1;
    }

    .chat-button {
      text-decoration: none;
      color: #ecf0f1;
      background-color: #2ecc71;
      padding: 15px 30px;
      border-radius: 5px;
      box-shadow: 0px 3px 6px 0px rgba(0,0,0,0.16);
      transition: background-color 0.3s ease;
    }

    .chat-button:hover {
      background-color: #27ae60;
    }

    .header div:last-child {
      display: flex;
      justify-content: center;
      gap: 10px;
    }

    .welcome-container {
      padding: 15px; 
      text-align: center; 
      background-color: #f0f0f0; 
    }

    .welcome-container p {
      font-size: 22px; 
      color: #34495e; 
    }

    .partidos {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
      gap: 20px;
      margin-top: 50px;
    }

    .partido {
      width: 45%;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 10px;
      margin-bottom: 20px;
      box-shadow: 0px 3px 6px 0px rgba(0,0,0,0.16);
      padding: 20px;
      border-radius: 5px;
      background-color: #ecf0f1;
    }

    .partido img {
      width: 100px;
      height: 100px;
    }

    .imagenes {
      display: flex;
      justify-content: space-between;
      width: 100%;
    }

    .bets-section {
      padding: 20px;
      background-color: #ecf0f1;
      border: 1px solid #bdc3c7;
      box-shadow: 0px 3px 6px 0px rgba(0,0,0,0.16);
      margin-top: 20px;
      text-align: center;
    }
    

    .bets-section h2 {
      font-size: 24px; 
      color: #34495e; 
    }

    .bets-section pre {
      background-color: #f5f5f5; 
      padding: 10px; 
      border-radius: 5px; 
    }

  </style>
<!-- src/views/index.ejs -->
</head>
<body>
  <div class="header">
    <h1>BETS 'N' FRIENDS</h1>
    <div>
      <a href="/inicio/login" class="login">Iniciar Sesión</a>
      <a href="/inicio/register" class="login">Registrarse</a>
      <a href="/inicio/usuario" class="login">Usuario</a>
      <form action="/inicio/upload" method="POST" enctype="multipart/form-data" style="display: inline;">
        <!-- <label for="imageUpload">Subir Imagen</label> -->
        <!-- <input type="file" id="imageUpload" name="image" accept="image/*"> -->
        <!-- <button type="submit">Subir</button> -->
      </form>
      <button class="chat-button" onclick="openChat()">Chat</button>
    </div>
  </div>

  <div class="welcome-container"> 
    <% if (user) { %>
      <p>Bienvenido <%= user.usuario %></p> 
      <% if (user.email) { %> 
        <p>Usuario: <%= user.email.split('@')[0] %></p> 
      <% } else { %>
        <p></p> 
      <% } %>
    <% } else { %>
      <p>Bienvenido</p> 
      <a href="/auth/google" class="login">Iniciar Sesión con Google</a>
    <% } %>
  </div>

  <div class="partidos"> 
    <div class="partido" onclick="showInfo('Bayern (visitante) vs Real Madrid (local), Lugar: Estadio Santiago Bernabéu, Momios: 2.5 a 1.7, Fecha: 12 de mayo de 2024')">
      <p>Bayern @ Real Madrid, 1:00</p>
      <div class="imagenes">
        <img src="/views/images/equipo1.png" alt="Bayern @ Real Madrid">
        <img src="/views/images/equipo2.png" alt="Bayern @ Real Madrid">
      </div>
    </div>
    <div class="partido" onclick="showInfo('Astros (visitante) vs Yankees (local), Lugar: Yankee Stadium, Momios: 1.8 a 2.2, Fecha: 12 de mayo de 2024')">
      <p>Astros @ Yankees, 5:05</p>
      <div class="imagenes">
        <img src="/views/images/equipo3.png" alt="Astros @ Yankees">
        <img src="/views/images/equipo4.png" alt="Astros @ Yankees">
      </div>
    </div>
    <div class="partido" onclick="showInfo('Pacers (visitante) vs Knicks (local), Lugar: Madison Square Garden, Momios: 2.1 a 1.9, Fecha: 12 de mayo de 2024')">
      <p>Pacers @ Knicks, 6:00</p>
      <div class="imagenes">
        <img src="/views/images/equipo5.png" alt="Pacers @ Knicks">
        <img src="/views/images/equipo6.png" alt="Pacers @ Knicks">
      </div>
    </div>
    <div class="partido" onclick="showInfo('Bruins (visitante) vs Panthers (local), Lugar: BB&T Center, Momios: 2.3 a 1.7, Fecha: 12 de mayo de 2024')">
      <p>Bruins @ Panthers, 8:00</p>
      <div class="imagenes">
        <img src="/views/images/equipo7.png" alt="Bruins @ Panthers">
        <img src="/views/images/equipo8.png" alt="Bruins @ Panthers">
      </div>
    </div>
  </div>
  <div class="bets-section">
    <h2>Apuestas Recientes</h2>
    <pre id="bets-content">Cargando apuestas...</pre> <!-- Donde se mostrarán las apuestas -->
  </div>

  <script>
    fetch('/inicio/bets')
  .then(response => response.json())
  .then(bets => {
    const contentElement = document.getElementById('bets-content');
    contentElement.innerHTML = ''; // Limpia el contenido existente

    bets.forEach(bet => {
      const lines = bet.content.split('\n');
      const partyName = bet.file.replace('chat_', '').replace('.txt', '');

      // Crea y añade un elemento <h3> para el nombre del partido
      const h3 = document.createElement('h3');
      h3.textContent = `Partido: ${partyName}`;
      contentElement.appendChild(h3);

      lines.forEach(line => {
        if (line.trim() !== '') {
          const contentOnly = line.split('- ')[1]; // Quita el guion al principio

          // Crea y añade un elemento <p> para cada apuesta
          const p = document.createElement('p');
          p.textContent = `${contentOnly}`; // Usa 'contentOnly' en lugar de '- ${contentOnly}'
          contentElement.appendChild(p);
        }
      });

      // Añade un espacio extra después de cada partido
      contentElement.appendChild(document.createElement('br'));
    });
  })
  .catch(err => {
    console.error('Error al cargar apuestas:', err);
  });

    function openChat() {
      window.open('/index.html', 'Chat', 'width=500,height=500');
    }
    
    function showInfo(partido) {
      alert('Información sobre el partido: ' + partido);
    }
  </script>

</body>
</html>